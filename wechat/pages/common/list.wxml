<!--列表list组件 -->
<template name="list">
  <scroll-view class="scroll-posts-list" scroll-y="true" style="height:100%" bindscrolltolower="lower">
    <view class="postslist">
      <block wx:for="{{postsList}}" wx:key="">
        <view class="posts-list">
          <navigator url="/pages/detail/detail?id={{item.id}}">
            <view class="posts-list-info" index="{{index}}">
              <image class='item-image' src="{{item.image}}" />
              <view class="item-box">
              
                <view class="userinfo">
                  <text>下发时间</text>
                  <text class="time">{{item.issueTime}}</text>
                </view>
                <view class="userinfo">
                  <text>课程名称</text>
                  <text class="time">{{item.name}}</text>
                </view>
                <view class="userinfo">
                  <text>朗读人数</text>
                  <text class="time">{{item.readNum}}</text>
                </view>
                <view class="userinfo">
                  <text>朗读人数</text>
                  <text class="time">{{item.readNum}}</text>
                </view>
                <view class="userinfo">
                  <text>背诵人数</text>
                  <text class="time">{{item.readNum}}</text>
                </view>
              
                <image wx:if="{{item.readState&&item.reciteState}}" class="completeImg" src="../../images/icon/complete.jpg" ></image>
              </view>
            </view>
          </navigator>
        </view>
      </block>
    </view>
  </scroll-view>

  <loading class="loading" hidden="{{hidden}}">
    <text class="loading-font">加载中...</text>
  </loading>
</template>