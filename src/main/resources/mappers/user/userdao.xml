<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mengmengyuan.core.user.dao.UserDao">
	<select id="getByLoginNameAndPassword" resultType="com.mengmengyuan.core.user.entity.UserInfo"
		parameterType="com.mengmengyuan.core.user.entity.UserInfo">
		select * from user where loginname =#{loginname} and password=#{password}
	</select>
	<insert id="insert" parameterType="com.mengmengyuan.core.user.entity.UserInfo">
		insert into user
		(id,loginname,nickname,image,password,userType,createData) values (
		#{id},#{loginName},#{nickname},#{image},#{password},#{userType},#{createDate})
	</insert>
	<update id="updateImage" parameterType="com.mengmengyuan.core.user.entity.UserInfo">
		 update user set image=#{image} where id=#{id}
	</update>
	<update id="updateNickname" parameterType="com.mengmengyuan.core.user.entity.UserInfo"> 
		update user set nickname = #{nickname} where id=#{id}
	</update>
</mapper>